<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="MyTheme" parent="MyTheme.Base">
  </style>
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="windowActionModeOverlay">true</item>
  </style>
  <style name="SplashTheme" parent="SplashTheme.Base">
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/accent</item>
  </style>
  <style name="SplashTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/background_splash</item>
  </style>

  <style name="auth_header_text_style">
    <item name="android:textSize">@dimen/authentication_header_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:layout_marginTop">@dimen/quad_pad</item>
    <item name="android:layout_marginLeft">@dimen/quad_pad</item>
  </style>
  <style name="auth_input_text_style">
    <item name="android:textSize">@dimen/authentication_code_text_size</item>
    <item name="android:layout_marginTop">30dp</item>
    <item name="android:layout_marginLeft">@dimen/triple_half_pad</item>
    <item name="android:layout_marginRight">@dimen/double_pad</item>
  </style>
  <style name="auth_toggle_text_style">
    <item name="android:textSize">@dimen/authentication_action_text_size</item>
    <item name="android:textColor">@color/accent</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginLeft">@dimen/quad_pad</item>
    <item name="android:layout_marginTop">@dimen/single_pad</item>
    <item name="android:clickable">true</item>
  </style>

  <style name="QuestionTitleText">
    <item name="android:textColor">@color/question_title_text</item>
  </style>
  <style name="SubtitleText">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/text_light</item>
  </style>

  <style name="button_primary" parent="@android:style/Widget.Button">
    <item name="colorButtonNormal">@color/primary</item>
    <item name="android:textColor">@android:color/white</item>
  </style>
	<style name="Widget.CardContent" parent="android:Widget">
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingBottom">24dp</item>
		<item name="android:orientation">vertical</item>
	</style>

  <style name="MyProfileRow">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">16dp</item>
  </style>

  <style name="MyProfileLabel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/primaryText</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="MyProfileText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/secondaryText</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="MyProfileDividerView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">#D8E3EA</item>
  </style>
</resources>
