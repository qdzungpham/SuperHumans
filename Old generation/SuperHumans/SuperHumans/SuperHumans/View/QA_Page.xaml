<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperHumans.View.QA_Page"
             Title="QA">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home"  Priority="1" Order="Primary"/>
        <ToolbarItem Text="Speak" Priority="1" Order="Secondary"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout>

        <Button Text=""
          
          HorizontalOptions="Center"
          VerticalOptions="Center"
          Image ="ask.png"      
               
          Clicked="GoAskQuestionButton"/>


        <Button Text=""
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Image ="browse.png"  
            Clicked="GoBrowseQButton"/>

        <Button Text="PREVIOUS PAGE" BackgroundColor="Orange" FontAttributes="Bold" TextColor="White"  HeightRequest="60" Clicked="PreviousPageButton"/>
        <!--Command="{Binding QuestionListCommand}}"-->

    </StackLayout>

</ContentPage>