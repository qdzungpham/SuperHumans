<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperHumans.View.EditableQuestionPage">

    <StackLayout>
        <Label Text="Title" />
        <Entry Text="{Binding SelectedQuestion.Title,Mode=TwoWay}"/>

        <Label Text="Body" />
        <Entry Text="{Binding SelectedQuestion.Body,Mode=TwoWay}"/>

        <Label Text="Owner" />
        <Entry Text="{Binding SelectedQuestion.Owner,Mode=TwoWay}"/>

        <Label Text="TimeAgo" />
        <Entry Text="{Binding SelectedQuestion.TimeAgo,Mode=TwoWay}"/>

        <Button Text="Edit" BackgroundColor="Silver" FontAttributes="Bold" TextColor="Blue"
                Command="{Binding EditCommand}"/>

        <Button Text="Delete" BackgroundColor="Silver" FontAttributes="Bold" TextColor="Blue"
                Command="{Binding DeleteCommand}"/>

        <Label Text="{Binding Message}"/>

    </StackLayout>

</ContentPage>